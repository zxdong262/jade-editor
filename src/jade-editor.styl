@require 'vender/google-prettify'
.jade-editor
  position relative
  textarea
    width 100%
    padding 10px
    position relative
    background transparent
    z-index 2
    border-radius 4px
    font-family Menlo,'Bitstream Vera Sans Mono','DejaVu Sans Mono',Monaco,Consolas,monospace
    font-size 14px
    line-height 1.5
    -webkit-text-fill-color transparent


.jade-editor-syntax
  position absolute
  left 0
  right 0
  top 0
  width 100%
  height 100%
  padding 10px!important
  z-index 1
  margin 0!important
  border-radius 4px
  background #2d2d2d
  border-radius 4px
  font-family Menlo,'Bitstream Vera Sans Mono','DejaVu Sans Mono',Monaco,Consolas,monospace
  font-size 14px
  line-height 1.5
